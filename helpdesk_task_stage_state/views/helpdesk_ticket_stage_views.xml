<odoo>
    <record id="view_helpdesk_ticket_stage_state_form" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_stage_state_form</field>
        <field name="model">helpdesk.ticket.stage</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_ticket_stage_form"/>
        <field name="arch" type="xml">
            <field name="closed" position="after">
                <field name="state"/>
            </field>
        </field>
    </record>
    <record id="view_helpdesk_ticket_stage_state_tree" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_stage_state_tree</field>
        <field name="model">helpdesk.ticket.stage</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_ticket_stage_tree"/>
        <field name="arch" type="xml">
            <field name="team_ids" position="after">
                <field name="state"/>
            </field>
        </field>
    </record>
</odoo>