<odoo>
    <!-- Admin level 01 -->
    <record id="view_admin_level_01_form" model="ir.ui.view">
        <field name="name">icrc.view_admin_level_01_form.form</field>
        <field name="model">admin.level.01</field>
        <field name="arch" type="xml">
            <form string="Admin Level 01">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="country_id"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Level 2">
                            <field name="child_2_ids"/>
                        </page>
                        <page string="Level 3">
                            <field name="child_3_ids"/>
                        </page>
                        <page string="Localities">
                            <field name="locality_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_admin_level_01_list" model="ir.ui.view">
        <field name="name">view_admin_level_01_list</field>
        <field name="model">admin.level.01</field>
        <field name="arch" type="xml">
            <list string="Admin Level 01">
                <field name="name"/>
                <field name="code"/>
                <field name="country_id"/>
            </list>
        </field>
    </record>

