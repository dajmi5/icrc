<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="genreg_record_tree_view" model="ir.ui.view">
        <field name="name">genreg.record.tree</field>
        <field name="model">genreg.record</field>
        <field name="arch" type="xml">
            <tree string="Register" js_class="genreg_record_list">
                <field name="doc_register_id" optional="hide" />
                <field name="doc_ref"/>
                <field name="doc_date"/>
                <!-- Column to display "C" in red when the status is "Cancelled" -->
                <!-- Display the "C" when the status is 'Cancelled' -->
                <field name="status" invisible="true"/>
                <field name="cancelled_display" string="C"
                       decoration-danger="status == 'cancelled'"/>
                <field name="doctype_id"/>
                <field name="format_code"/>
                <field name="doctype_id"/>
                <field name="for_action_ids" widget="many2many_tags"/>
                <field name="for_info_ids" widget="many2many_tags"/>
                <field name="doc_subject"/>
                <field name="doc_initiator"/>
                <field name="doc_sender"/>
                <field name="confidentiality_code"/>
                <field name="filing"/>
                <field name="remarks" string="Rem"/>
            </tree>
        </field>
    </record>

    <record id="genreg_record_all_tree_view" model="ir.ui.view">
        <field name="name">genreg.record.tree</field>
        <field name="model">genreg.record</field>
        <field name="arch" type="xml">
            <tree string="Register" create="false">
                <field name="doc_register_id" optional="hide" />
                <field name="doc_ref"/>
                <field name="doc_date"/>
                <!-- Column to display "C" in red when the status is "Cancelled" -->
                <!-- Display the "C" when the status is 'Cancelled' -->
                <field name="status" invisible="true"/>
                <field name="cancelled_display" string="C"
                       decoration-danger="status == 'cancelled'"/>
                <field name="doctype_id"/>
                <field name="format_code"/>
                <field name="doctype_id"/>
                <field name="for_action_ids" widget="many2many_tags"/>
                <field name="for_info_ids" widget="many2many_tags"/>
                <field name="doc_subject"/>
                <field name="doc_initiator"/>
                <field name="doc_sender"/>
                <field name="confidentiality_code"/>
                <field name="filing"/>
                <field name="remarks" string="Rem"/>
            </tree>
        </field>
    </record>

    <record id="genreg_record_form_view" model="ir.ui.view">
        <field name="name">register.form</field>
        <field name="model">genreg.record</field>
        <field name="arch" type="xml">
            <form string="General Register">
                <!-- Main heading -->
                <header>

                    <field name="doc_ref" readonly="1" widget="char" class="oe_highlight"
                           style="font-size:24px; font-weight:bold;"/>
                    <field name="doc_ref" widget="CopyDocRefButton"/>
                </header>
                <field name="doc_register_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                <!-- First section: Date, Format, Doc Type -->
                <group string="Document Information" colspan="2">
                    <group>
                        <field name="doc_date" string="Date"/>
                        <field name="format_id" string="Format"/>
                        <field name="doctype_id" string="Doctype"/>
                    </group>
                </group>

                <!-- Second section: For Action and For Info -->
                <group string="Recipients" colspan="2">
                    <group>
                        <field name="for_action_ids" widget="many2many_tags" string="For Action / To:"/>
                        <field name="for_info_ids" widget="many2many_tags" string="For Info / Cc:"/>
                        <field name="doc_initiator" string="Initiator"/>
                        <field name="doc_sender" string="Sender"/>
                        <field name="doc_subject" string="Subject"/>
                        <field name="confidentiality_id" string="Confidentiality Level"/>
                        <field name="filing" string="Filing"/>
                        <field name="remarks" string="Remarks"/>
                    </group>
                </group>

                <!-- Status and version at the bottom -->
                <group string="Status" colspan="2">
                    <group>
                        <field name="status" widget="radio" options="{'horizontal':true}"/>
                    </group>
                </group>
            </form>
        </field>
    </record>


    <record id="genreg_record_action" model="ir.actions.act_window">
        <field name="name">General Register</field>
        <field name="res_model">genreg.record</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="genreg_record_tree_view"/>
        <field name="domain">[('doc_register_id', '=', active_id)]</field>
    </record>

    <record id="genreg_record_action_all" model="ir.actions.act_window">
        <field name="name">General Register</field>
        <field name="res_model">genreg.record</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="genreg_record_all_tree_view"/>
    </record>
</odoo>