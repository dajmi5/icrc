<odoo>

    <record id="view_genreg_register_form" model="ir.ui.view">
        <field name="name">genreg.register.form</field>
        <field name="model">genreg.register</field>
        <field name="arch" type="xml">
            <form string="General Register">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>

                    <group groups="genreg.group_genreg_user_manager">
                        <field name="sec_editor_group_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        <field name="sec_manager_group_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_genreg_register_tree" model="ir.ui.view">
        <field name="name">genreg.register.tree</field>
        <field name="model">genreg.register</field>
        <field name="arch" type="xml">
            <tree string="General Register">
                <field name="name"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <record id="action_genreg_register_records" model="ir.actions.act_window">
        <field name="name">Related Records</field>
        <field name="res_model">genreg.record</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="genreg_record_tree_view"/>
        <field name="context">{
            'default_project_id': active_id,
            'show_project_update': True,
            'no_breadcrumbs': True,
            }</field> <!-- careful, it's sensitive about formating due to usage of eval-->
        <field name="domain">[('doc_register_id', '=', active_id)]</field>
    </record>

    <record id="view_genreg_register_kanban" model="ir.ui.view">
        <field name="name">genreg.register.kanban</field>
        <field name="model">genreg.register</field>
        <field name="arch" type="xml">
            <kanban string="General Register" action="action_view_records" type="object"
                    class="oe_background_grey o_kanban_dashboard">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_color_0">
                            <div t-attf-class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#" title="Toggle dropdown">
                                        <i class="fa fa-ellipsis-v"/>
                                    </a>
                                </div>
                                <div class="container o_kanban_card_content"/>
                                <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <div class="row">
                                        <div class="col-6 o_kanban_card_manage_section o_kanban_manage_view">
                                            <div class="o_kanban_card_manage_title">
                                                <span>View</span>
                                            </div>
                                            <div>
                                                <a class="dropdown-item" role="menuitem" type="edit">Settings</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_genreg_register" model="ir.actions.act_window">
        <field name="name">General Register</field>
        <field name="res_model">genreg.register</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_genreg_register_kanban"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new General Register entry.
            </p>
        </field>
    </record>


</odoo>
