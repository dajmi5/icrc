<odoo>
    <record id="view_helpdesk_team_form" model="ir.ui.view">
        <field name="name">view_helpdesk_team_form</field>
        <field name="model">helpdesk.ticket.team</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_team_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Allowed categories" name="categ">
                    <field name="category_ids" />
                </page>
            </notebook>
        </field>
    </record>
    <record id="view_helpdesk_team_tree" model="ir.ui.view">
        <field name="name">view_helpdesk_team_tree</field>
        <field name="model">helpdesk.ticket.team</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_team_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="category_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>