<odoo>
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="team_categ_ids" widget="many2many_tags" invisible="1"/>
            </field>
            <field name="category_id" position="replace">
                <field name="category_id" domain="team_categ_ids and [('id','in',team_categ_ids)] or []"/>

            </field>
        </field>
    </record>

</odoo>