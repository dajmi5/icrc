<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_rank_form" model="ir.ui.view">
            <field name="name">military.rank.form</field>
            <field name="model">military.rank</field>
            <field name="arch" type="xml">
                <form string="rank">
                    <sheet>
                        <group>
                            <field name="sequence"/>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="code"/>
                            <field name="description"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_rank_list" model="ir.ui.view">
            <field name="name">military.rank.list</field>
            <field name="model">military.rank</field>
            <field name="arch" type="xml">
                <list string="Military Ranks">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="parent_id"/>
                </list>
            </field>
        </record>

        <record id="view_rank_filter" model="ir.ui.view">
            <field name="name">military.rank.search</field>
            <field name="model">military.rank</field>
            <field name="arch" type="xml">
                <search string="Military Ranks">
                    <field name="name"/>
                    <field name="code"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                </search>
             </field>
        </record>


        <record id="military_rank_action" model="ir.actions.act_window">
            <field name="name">Military Ranks</field>
            <field name="res_model">military.rank</field>
            <field name="view_mode">list,form</field>
        </record>


        <menuitem
            id="menu_view_rank_form"
            name="Military ranks"
            action="military_rank_action"
            parent="contacts.res_partner_menu_config"
            sequence="2"
        />


</odoo>