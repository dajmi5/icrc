<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_team_form" model="ir.ui.view">
        <field name="name">icrc_helpdesk_team-form</field>
        <field name="model">helpdesk.ticket.team</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_team_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='right']" position="inside">
                <field name="default_mail_channel_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_helpdesk_team_kanban" model="ir.ui.view">
        <field name="name">helpdesk_team_kanban</field>
        <field name="model">helpdesk.ticket.team</field>
        <field name="inherit_id" ref="helpdesk_mgmt.helpdesk_ticket_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="default_mail_channel_id"/>
            </xpath>
<!--            <xpath expr="//button[@name='%(helpdesk_mgmt.action_helpdesk_ticket_kanban_from_dashboard)d']"-->
<!--                   position="after">-->
<!--                <button class="btn"-->
<!--                        name="%(action_helpdesk_ticket_mail_from_dashboard)d"-->
<!--                        type="action"-->
<!--                        context="{}">-->
<!--                    Messages-->
<!--                </button>-->
<!--            </xpath>-->
            <xpath expr="//div[@role='menu']" position="before">
                <div class="o_kanban_record_bottom mt-3">
                    <div class="oe_kanban_bottom_left">
                        <div class="d-flex align-items-baseline">
                            <a name="%(action_helpdesk_ticket_mail_from_dashboard)d" type="action">
                                <div>
                                    <span class="o_label ms-1">Ticket</span>
                                </div>
                            </a>
                        </div>
                        <div class="d-flex align-items-baseline">
                            <a name="%(action_helpdesk_team_mail_from_dashboard)d" type="action">
                                <div>
                                    <span class="o_label ms-1">Team</span>
                                </div>
                            </a>
                        </div>
                        <div class="d-flex align-items-baseline">
                            <a name="%(action_helpdesk_channel_mail_from_dashboard)d" type="action">
                                <div>
                                    <span class="o_label ms-1">Channel</span>
                                </div>
                            </a>
                        </div>
                        <div class="d-flex align-items-baseline">
                            <a name="%(action_helpdesk_all_mail_from_dashboard)d" type="action">
                                <div>
                                    <span class="o_label ms-1">All messages</span>
                                </div>
                            </a>
                        </div>
<!--                        <field name="activity_ids" widget="kanban_activity"/>-->
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>