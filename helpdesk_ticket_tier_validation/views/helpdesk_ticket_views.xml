<odoo>
    <record id="view_ticket_tier_form" model="ir.ui.view">
        <field name="name">view_ticket_tier_form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="before">
                <field name="validation_status" widget="badge"/>
            </field>
        </field>
    </record>
    <record id="view_ticket_tier_tree" model="ir.ui.view">
        <field name="name">view_ticket_tier_tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_tree"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="before">
                <field name="validation_status" widget="badge"
                       decoration-success="validation_status in ('no','validated')"
                        decoration-info="validation_status == 'pending'"
                        decoration-danger="validation_status == 'rejected'"
                       optional="hide"
                />
            </field>
        </field>
    </record>
    <record id="view_ticket_tier_kanban" model="ir.ui.view">
        <field name="name">view_ticket_tier_kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_ticket_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban/field[@name='sequence']">
                <field name="validation_status"/>
            </xpath>
            <xpath expr="//div/field[@name='activity_ids']" position="after">
                <field name="validation_status" widget="badge"
                       attrs="{'invisible':[('validation_status','=','no')]}"/>
            </xpath>
        </field>
    </record>
</odoo>