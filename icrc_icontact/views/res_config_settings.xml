<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.icontact</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="2" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app
                    data-string="iContact"
                    string="iContact"
                    name="icontact"
                    groups="icrc_icontact.group_icontact_manager"
                >
                    <block title="Extension modules" name="locations_setting_container">
                        <setting
                            string="Manage military ranks"
                            help="Manage military ranks for military personell"
                        >
                            <field name="module_icontact_military_rank" />
                        </setting>
                        <setting
                            string="Manage partners administrative units"
                            help="Manage hierarhical structure of adminsitrative units"
                        >
                            <field name="module_icontact_administrative_unit" />
                        </setting>
                        <setting
                            string="Manage partner adminLevel"
                            help="Manage dispersed data in 4 levels"
                        >
                            <field name="module_icontact_adminlevel" />
                        </setting>
                        <setting
                            string="Operating units on partner"
                            help="Manage operating units on partners"
                        >
                            <field name="module_icontact_operating_unit" />
                        </setting>
                        <setting
                            string="Multi relations for partners"
                            help="Manage multiple relations between partners"
                        >
                            <field name="module_icontact_multi_relation" />
                        </setting>
                    </block>

<!--                    <block title="Equipments" name="equipments_setting_container">-->
<!--                        <setting-->
<!--                            string="Manage Equipments"-->
<!--                            help="Manage equipments at the service location"-->
<!--                        >-->
<!--                            <field name="group_fsm_equipment" />-->
<!--                        </setting>-->
<!--                    </block>-->


                </app>
            </xpath>
        </field>
    </record>
    <record id="action_icontact_config" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'iContact'}</field>
    </record>
    <menuitem id="menu_icontact_settings"
              name="Settings"
              action="action_icontact_config"
              parent="contacts.res_partner_menu_config"
              groups="icrc_icontact.group_icontact_manager"
              sequence="0"/>
    <menuitem id="menu_icontact_config"
              name="iContact Configurations"
              parent="contacts.res_partner_menu_config"
              groups="icrc_icontact.group_icontact_manager"
              sequence="1"/>
</odoo>
