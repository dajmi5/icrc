<odoo>
    <record id="view_military_rank_form" model="ir.ui.view">
        <field name="name">military.rank.form</field>
        <field name="model">military.rank</field>
        <field name="arch" type="xml">
            <form string="Military Rank">
                <sheet>
                    <group>
                        <group string="Classification">
                            <field name="rank_type"/>
                            <field name="forces_type"/>
                        </group>
                        <group string="Localization">
                            <field name="country_id"/>
                            <field name="country_group_id"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>


                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Subordinates">
                            <field name="child_ids"/>
                        </page>
                        <page string="Staff">
                            <field name="partner_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_military_rank_list" model="ir.ui.view">
        <field name="name">military.rank.list</field>
        <field name="model">military.rank</field>
        <field name="arch" type="xml">
            <list string="Military Ranks">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="parent_id" optional="hide"/>
                <field name="rank_type" optional="hide"/>
                <field name="forces_type" optional="hide"/>
                <field name="country_id" optional="hide"/>
                <field name="country_group_id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_military_rank_filter" model="ir.ui.view">
        <field name="name">military.rank.search</field>
        <field name="model">military.rank</field>
        <field name="arch" type="xml">
            <search string="Military Ranks">
                <field name="name"/>
                <field name="code"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_rank_type"
                            string="By Rank type"
                            domain=""
                            context="{'group_by': 'rank_type'}"/>
                    <filter name="group_force_type"
                            string="By Force type"
                            domain=""
                            context="{'group_by': 'forces_type'}"/>
                    <filter name="group_force_type"
                            string="By Country"
                            domain=""
                            context="{'group_by': 'country_id'}"/>
                </group>
            </search>
         </field>
    </record>

    <record id="view_military_rank_hierarchy" model="ir.ui.view">
        <field name="name">view_military_rank_hierarchy</field>
        <field name="model">military.rank</field>
        <field name="arch" type="xml">
            <hierarchy child_field="child_ids">
                <field name="name"/>
                <field name="code"/>
                <templates>
                    <t t-name="hierarchy-box">
<!--                        <div t-attf-class="o_hierarchy_node_header d-flex justify-content-center pb-4 o_hierarchy_node_color_{{ record.color.raw_value }}" t-att-title="parent_id">-->

<!--                        </div>-->
                        <div class="o_hierarchy_node_body d-flex flex-column text-center">
                            <div class="d-flex">

                                <field class="fw-bold w-100" name="name"/>
<!--                                <field class="w-100" name="code"/>-->

                            </div>
                        </div>
                    </t>
                </templates>
            </hierarchy>
        </field>
    </record>

    <record id="action_military_rank" model="ir.actions.act_window">
        <field name="name">Military Ranks</field>
        <field name="res_model">military.rank</field>
        <field name="view_mode">list,form,hierarchy</field>
    </record>

    <menuitem
        id="menu_military_rank"
        name="Military ranks"
        action="action_military_rank"
        parent="icrc_icontact.menu_icontact_config"
        sequence="1"
    />

</odoo>